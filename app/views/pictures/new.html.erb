<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-6">
      <h1>Add a new Photo</h1>
    </div>
</div>

<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="well bs-component">
        <%= simple_form_for( @picture, html: {class: 'form-horizontal pb-new-picture'}
          ) do |f| %>
          <%= f.error_notification %>
          <%= f.input :avatar, as: :file %>
          <%= f.input :title, input_html: {class: 'input-lg form-control', } %>
          <%= f.input :description, as: :text, input_html: {size: '140x3', class: 'input-lg form-control'} %>
          <div class="form-actions">
            <%= f.button :submit, "Create", class: 'btn btn-success' %>
          </div>
         <% end %>
      </div>
    </div>
  </div>
</div>